{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    //  "baseUrl": ".",
    "paths": {
       "@/*": ["./src/*"]
     }
  },
  "include": ["src"]
}